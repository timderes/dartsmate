{
  "private": true,
  "name": "dartsmate",
  "productName": "DartsMate",
  "description": "Analyze, track and compare your dart games.",
  "version": "0.5.0",
  "author": "DartsMate Contributors",
  "main": "app/background.js",
  "repository": "https://github.com/timderes/dartsmate",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "build:all": "nextron build --all",
    "build:win32": "nextron build --win --ia32",
    "build:win64": "nextron build --win --x64",
    "build:mac": "nextron build --mac --x64",
    "build:linux": "nextron build --linux",
    "postinstall": "electron-builder install-app-deps",
    "lint": "concurrently --kill-others-on-fail --names \"MAIN,RENDERER\" --prefix-colors \"blue,magenta\" \"npm:lint:main\" \"npm:lint:renderer\"",
    "lint:main": "eslint . --ignore-pattern renderer --max-warnings 0",
    "lint:renderer": "eslint renderer --max-warnings 0",
    "lint:fix": "npm run lint:main -- --fix && npm run lint:renderer -- --fix",
    "format": "prettier --write .",
    "release": "electron-builder --publish always",
    "test": "vitest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@mantine/charts": "^8.3.12",
    "@mantine/core": "^8.3.12",
    "@mantine/dropzone": "^8.3.12",
    "@mantine/form": "^8.3.12",
    "@mantine/hooks": "^8.3.12",
    "@mantine/modals": "^8.3.12",
    "@mantine/notifications": "^8.3.12",
    "@tabler/icons-react": "^3.36.1",
    "electron-log": "^5.4.3",
    "electron-serve": "^3.0.0",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "embla-carousel": "^8.6.0",
    "embla-carousel-react": "^8.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^16.1.1",
    "@types/node": "^25.0.5",
    "@types/react": "^19.2.8",
    "@types/uuid": "^11.0.0",
    "@workmate/country-and-currency": "^1.2.2",
    "concurrently": "^9.2.1",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next": "^16.1.1",
    "next-i18next": "^15.4.3",
    "nextron": "^9.5.0",
    "postcss": "^8.5.5",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-image-file-resizer": "^0.4.8",
    "recharts": "^3.6.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "use-elapsed-time": "^3.0.4",
    "uuid": "^13.0.0",
    "vitest": "^4.0.16"
  }
}
